<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/darkbg2"
    tools:context=".ui.CallingActivity">

    <Chronometer
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#FFEB3B"
        android:fontFamily="@font/helvebold"
        android:id="@+id/chronometer"/>

    <Button
        android:id="@+id/btn_hangup"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/endcall01" />

    <Button
        android:id="@+id/btn_speakerphone"
        android:layout_width="113dp"
        android:layout_height="115dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_speakerphone_white" />

    <Button
        android:id="@+id/btn_microphone"
        android:layout_width="113dp"
        android:layout_height="115dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="273dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/ic_mic_off_white" />

</RelativeLayout>